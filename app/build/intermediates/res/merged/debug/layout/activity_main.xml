<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.luisc.simpleslogin.MainActivity">

    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="44dp"
        android:text="@string/text_user" />

    <TextView
        android:id="@+id/text_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_user"
        android:layout_alignRight="@+id/text_user"
        android:layout_below="@+id/text_user"
        android:layout_marginTop="38dp"
        android:text="@string/text_pass" />

    <TextView
        android:id="@+id/text_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_pass"
        android:layout_alignStart="@+id/text_pass"
        android:layout_below="@+id/text_pass"
        android:layout_marginTop="86dp"
        android:text="@string/text_at" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_user"
        android:layout_alignStart="@+id/text_user"
        android:layout_centerVertical="true"
        android:text="@string/button_log" />

    <EditText
        android:id="@+id/user_Box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_pass"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pass_Box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_pass"
        android:layout_alignLeft="@+id/user_Box"
        android:layout_alignStart="@+id/user_Box"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/attempts_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_at"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button" />

</RelativeLayout>
